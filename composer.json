{
    "name": "mobilemessage/php-sdk",
    "description": "PHP SDK for Mobile Message SMS API",
    "type": "library",
    "keywords": ["sms", "messaging", "api", "mobile message", "australia", "bulk sms"],
    "homepage": "https://github.com/ClermontDigital/MobileMessageSDK",
    "license": "MIT",
    "authors": [
        {
            "name": "developersteve",
            "email": "steve@clermontdigital.com.au",
            "homepage": "https://github.com/developersteve"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "symfony/var-dumper": "^5.0|^6.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "MobileMessage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MobileMessage\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-fix": "php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "version": "1.0.0"
} 